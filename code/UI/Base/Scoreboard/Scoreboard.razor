@inherits Panel
@using Sandbox;
@using Sandbox.UI;
@namespace Platformer
@attribute [StyleSheet("Scoreboard.scss")]

<root class="scoreboard">
    <img class="logo" src="/ui/hud/scoreboard/logo.png" />
    <panel class="header" @ref="Header">
        <label class="player-name">Name</label>
        <label class="kills">Points</label>
        <label class="deaths">Deaths</label>
        <label class="ping">Ping</label>
    </panel>

    <panel class="canvas" @ref="Canvas"></panel>

</root>